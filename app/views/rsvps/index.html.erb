<h1>Listing rsvp</h1>

<% @rsvps.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |rsvp| %>
      <div class="col-md-4">
        <%= image_tag rsvp.picture_url, width: '100%' if rsvp.picture.present? %>
        <h4><%= link_to rsvp.name, rsvp %></h4>
        <%= rsvp.description %>
      </div>
    <% end %>
  </div>
<% end %>
<%= link_to 'New Rsvp', new_rsvp_path %>
